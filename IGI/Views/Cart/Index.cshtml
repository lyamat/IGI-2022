@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Cart</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Images/@item.PcPart.Image" alt="No image" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PcPart.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a asp-controller="Cart"
                       asp-action="Delete" asp-route-id="@item.PcPart.Id"
                       class="btn btn-outline-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>