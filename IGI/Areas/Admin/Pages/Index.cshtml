@page
@model IGI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Edit catalog</h1>

    <p class="mt-2">
        <a asp-page="Create" class="btn btn-outline-info">
            <span class="fa fa-plus"> Add</span>
        </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.PCPart[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PCPart[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PCPart[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PCPart[0].CategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PCPart)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.Image" alt="NoImage" width="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id"
                       class="btn btn-outline-info">
                            <span class="fas fa-edit"></span>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id"
                       class="btn btn-outline-danger">
                            <span class="fas fa-trash-alt"></span>
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id"
                       class="btn btn-outline-info">
                            <span class="fas fa-info"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

